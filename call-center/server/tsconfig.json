{
  "compilerOptions": {
    "types": ["jest", "node"],
    "target": "es5",
    "lib": ["es5", "es6"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  }
}
